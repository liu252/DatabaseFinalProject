<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/TopRow_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/SNMPGET_Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SNMPGET"
            />
        <EditText
            android:id="@+id/OID_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="OID"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MiddleRow_LinearLayout"
        android:layout_below="@+id/TopRow_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/SNMPSET_Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SNMPSET"
            />
        <EditText
            android:id="@+id/Value_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VALUE"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/SNMPSet_TextView"
        android:layout_below="@+id/MiddleRow_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:hint="TextView"
        android:textSize="17sp"
        android:lines="2"
        />
    <Button
        android:id="@+id/SNMPWALK_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SNMPSet_TextView"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="SNMPWALK"
        />

    <TextView
        android:id="@+id/SNMPWALK_TextView"
        android:layout_below="@+id/SNMPWALK_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:hint="TextView"
        android:textSize="17sp"
        />

</RelativeLayout>
